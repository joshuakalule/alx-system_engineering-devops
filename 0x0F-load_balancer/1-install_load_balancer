#!/usr/bin/env bash
# Install load balancer on lb-01 server
apt-get -y update
apt-get -y install haproxy

echo "
frontend listener
        bind *:80
        default_backend web-backend

backend web-backend
        balance roundrobin
        server 203035-web-01 52.206.61.240:80 check
        server 203035-web-02 54.144.158.52:80 check
" >> /etc/haproxy/haproxy.cfg

sudo service haproxy start
